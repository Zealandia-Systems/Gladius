.dashboard {
    position: absolute;
    top: 60px;
    left: 10px;
    right: 10px;
    bottom: 0;

    :global {
        .row {
            margin-bottom: 5px;
        }
        .row:last-child {
            margin-bottom: 0;
        }
    }

    .gcode-viewer {
        border: 1px solid #ccc;
        position: absolute;
        top: 100px;
        left: 10px;
        right: 10px;
        bottom: 10px;

        &.gcode-viewer-disabled {
            background-color: #f5f5f5;
        }

        .line {
            font-family: 'Hack', monospace;
            white-space: break-spaces;
            overflow: hidden;
            text-overflow: ellipsis;
            background-color: #ffffdd;
        }

        .current-line {
            background-color: #e2e2c2;
        }

        .label {
            display: inline;
            padding-left: 1em;
            padding-top: .4em;
            padding-right: .4em;
            padding-bottom: .4em;
            font-size: 90%;
            font-weight: bold;
            line-height: 1;
            color: #b0b7af;
            background-color: #e1ffdc;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            /*border-right: 2px solid #777;*/
            margin-right: 8px;
        }
        .label-default {
            /*background-color: #777;*/
        }
    }
}

.absolute-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.progressbar-label {
    color: #222;
    padding: 0 10px;
}
